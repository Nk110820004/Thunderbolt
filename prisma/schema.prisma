generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model adventures {
  adventure_id    Int               @id @default(autoincrement())
  name            String            @db.VarChar(100)
  description     String?
  user_adventures user_adventures[]
}

model user_adventures {
  user_adventure_id Int        @id @default(autoincrement())
  user_id           Int
  adventure_id      Int
  status            String?    @default("in-progress") @db.VarChar(20)
  started_at        DateTime?  @default(now()) @db.Timestamp(6)
  completed_at      DateTime?  @db.Timestamp(6)
  adventures        adventures @relation(fields: [adventure_id], references: [adventure_id], onDelete: Cascade, onUpdate: NoAction)
  users             users      @relation(fields: [user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction)
}

model user_profiles {
  user_profile_id Int     @id @default(autoincrement())
  user_id         Int     @unique
  display_name    String? @db.VarChar(100)
  avatar_url      String?
  bio             String?
  users           users   @relation(fields: [user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction)
}

model user_settings {
  user_settings_id Int   @id @default(autoincrement())
  user_id          Int   @unique
  settings         Json? @default("{}")
  users            users @relation(fields: [user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  user_id         Int               @id @default(autoincrement())
  username        String            @unique @db.VarChar(50)
  phone_number    String            @unique @db.VarChar(15)
  email           String            @unique @db.VarChar(100)
  level           Int?              @default(1)
  star_score      Int?              @default(0)
  gems            Int?              @default(0)
  penalty_bar     Int?              @default(0)
  created_at      DateTime?         @default(now()) @db.Timestamp(6)
  updated_at      DateTime?         @default(now()) @db.Timestamp(6)
  user_adventures user_adventures[]
  user_profiles   user_profiles?
  user_settings   user_settings?
}
